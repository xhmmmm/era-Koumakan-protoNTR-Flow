@NTR_ActivityCall_KU(对象,阶段行为编号,密室度)
#DIM 对象
#DIM 阶段行为编号
#DIM 密室度
IF NTR_CHK_FAVORABLY(对象,FAV_うふふする程度2)
	SELECTCASE 阶段行为编号
		CASE 8
			CALL NTR_A_SEX(对象,密室度)
		CASE 7
			CALL NTR_SEX(对象,密室度)
		CASE 6
			CALL NTR_THUG(对象)
		CASE 5
			CALL NTR_69(对象)
		CASE 4
			CALL NTR_FELLATIO(对象)
		CASE 3
			CALL NTR_BUST_PET(对象)
		CASE 2
			CALL NTR_PET(对象)
		CASE 1
			CALL NTR_KISS(对象)
		CASEELSE
			IF CFLAG:MASTER:当前位置 == FLAG:访问者当前位置 && !CFLAG:对象:睡眠
				;会话（主人同席）
				CALL NTR_MESSAGE_1_1(对象)
				CALL NTR_RESET_VISITOR_ACTION(对象)
				TRYCALLLIST
					FUNC NTR_KOJO_KW{CFLAG:对象:口上パターン}_1(对象)
					FUNC NTR_KOJO_KW_1(对象)
				ENDFUNC
			ELSEIF NTR_CHK_VISIBLE(FLAG:访问者当前位置) && !CFLAG:对象:睡眠
				;会话（主人不在）
				CALL NTR_MESSAGE_1_0(对象)
				CALL NTR_RESET_VISITOR_ACTION(对象)
				SIF FLAG:口上颜色
					CALL KOJO_COLOR(对象)
				TRYCALLLIST 
					FUNC NTR_KOJO_K{CFLAG:对象:口上パターン}_1(对象)
					FUNC NTR_KOJO_K_1(对象)
				ENDFUNC
				RESETCOLOR
			ENDIF
			CALL NTR_COUNTER(对象)
	ENDSELECT
ELSEIF NTR_CHK_FAVORABLY(对象,FAV_侍奉する程度)
	SELECTCASE 阶段行为编号
		CASE 6
			CALL NTR_THUG(对象)
		CASE 5
			CALL NTR_69(对象)
		CASE 4
			CALL NTR_FELLATIO(对象)
		CASE 3
			CALL NTR_BUST_PET(对象)
		CASE 2
			CALL NTR_PET(对象)
		CASE 1
			CALL NTR_KISS(对象)
		CASEELSE
			IF CFLAG:MASTER:当前位置 == FLAG:访问者当前位置 && !CFLAG:对象:睡眠
				;会话（主人同席）
				CALL NTR_MESSAGE_1_1(对象)
				CALL NTR_RESET_VISITOR_ACTION(对象)
				TRYCALLLIST
					FUNC NTR_KOJO_KW{CFLAG:对象:口上パターン}_1(对象)
					FUNC NTR_KOJO_KW_1(对象)
				ENDFUNC
			ELSEIF NTR_CHK_VISIBLE(FLAG:访问者当前位置) && !CFLAG:对象:睡眠
				;会话（主人不在）
				CALL NTR_MESSAGE_1_0(对象)
				CALL NTR_RESET_VISITOR_ACTION(对象)
				SIF FLAG:口上颜色
