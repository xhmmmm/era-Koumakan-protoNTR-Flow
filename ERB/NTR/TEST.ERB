				TRYCALLLIST 
					FUNC NTR_KOJO_K{CFLAG:对象:口上パターン}_1(对象)
					FUNC NTR_KOJO_K_1(对象)
				ENDFUNC
				RESETCOLOR
			ENDIF
			CALL NTR_COUNTER(对象)
	ENDSELECT
ELSEIF NTR_CHK_FAVORABLY(对象,FAV_体を触らせる程度)
	SELECTCASE 阶段行为编号
		CASE 3
			CALL NTR_BUST_PET(对象)
		CASE 2
			CALL NTR_PET(对象)
		CASE 1
			CALL NTR_KISS(对象)
		CASEELSE
			IF CFLAG:MASTER:当前位置 == FLAG:访问者当前位置 && !CFLAG:对象:睡眠
				;会话（主人同席）
				CALL NTR_MESSAGE_1_1(对象)
